<!DOCTYPE html>
<html>
<head>
  <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Quote Finder </title>
</head>


      <h1> Quote Finder </h1>
 <%- include("partials/navigation.ejs")%> 

    
      <!--  <h2> Search by Keyword: </h2><br> -->
       <br><br>
      
      <!-- search by keyword -->
  
    <div id="mydisplay" >
      <div>
        <form action="/searchByKeyword">
          Keyword:
          <input type="text" name="keyword">  
          <button class="btn btn-info"> Search by Keyword </button>
        </form>
      </div>
    
       <!-- search by author -->
      <div> 
        <form action="/searchByAuthor"> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
          Author:
          <select name="authorID">
            <% for (let i = 0; i < authors.length; i++) { %>
              <option value = "<%=authors[i].authorId%>">
                <%= authors[i].firstName %> 
                <%= authors[i].lastName %>
                  
              </option>
            <% } %>
            </select>
          <button class="btn btn-info"> Search by Author </button>
        </form>
      </div>
    </div>
          <br> <br> <br>
    <!--     Search by CXategory         -->
    <div id="mydisplay2">
      <div>
        <form action="/searchByCategory"> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
        Category: 
        <select name="category">
          <% for (let i = 0; i < categories.length; i++) { %>
            <option value = "<%=categories[i]%>">
              <%=categories[i]%>
            </option>
            <% } %>
        </select>
        <button class="btn btn-info">Search by Category</button>
      </form>
    </div>
  
    <!--search by likes -->
    <div>
      <form action="/actionByLikes"> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
        Likes:
        <input type="number" name="min" min="1" max="200">
        <input type="number" name="max" min="1" max="200">
        <button class="btn btn-info">Search by Likes</button>
      </form>
    </div>
     </div>  
  <%- include("partials/footer.ejs")%>
  </body>
</html>